{
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "project": "./",
    "rootDir": "./",

    "target": "es2018",
    "module": "es2015",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "./built/es9-esm",

    "strict": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"]
}
